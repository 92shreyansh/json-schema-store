{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/92shreyansh/json-schema-store/master/FIS10/1.0.0/search.json",
    "title": "FIS10 v1.0.0 Schema Search API",

    "type": "object",
    "required": [
        "context"
    ],
    "additionalProperties": false,
    "properties": {
        "context": {
            "$ref": "./bap_context.json"
        },
        "message": {
            "type": "object",
            "required": [
                "intent",
                "tags"
            ],
            "additionalProperties": false,
            "properties": {
                "intent": {
                    "type": "object",
                    "required": [
                        "item"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "item": {
                            "type": "object",
                            "required": [
                                "descriptor"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "descriptor": {
                                    "type": "object",
                                    "required": [
                                        "name"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "descriptor",
                            "display",
                            "list"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "descriptor": {
                                "type": "object",
                                "required": [
                                    "code"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "code": {
                                        "type": "string"
                                    }
                                }
                            },
                            "display": {
                                "type": "boolean"
                            },
                            "list": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "descriptor",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "descriptor": {
                                            "type": "object",
                                            "required": [
                                                "code"
                                            ],
                                            "additionalProperties": false,
                                            "properties": {
                                                "code": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}